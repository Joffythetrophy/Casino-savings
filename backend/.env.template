# Hot Wallet Configuration Template
# Copy this to .env and fill in your actual private keys

# Solana Hot Wallet (Base58 encoded private key)
SOLANA_HOT_WALLET_PRIVATE_KEY=your_solana_private_key_here

# Dogecoin Hot Wallet (WIF format private key)
DOGE_HOT_WALLET_PRIVATE_KEY=your_doge_private_key_here

# TRON Hot Wallet (Hex format private key)  
TRON_HOT_WALLET_PRIVATE_KEY=your_tron_private_key_here

# RPC URLs (optional - will use defaults)
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
DOGE_RPC_URL=https://api.blockcypher.com/v1/doge/main
TRON_RPC_URL=https://api.trongrid.io

# Security Settings
HOT_WALLET_MAX_DAILY_LIMIT=1000000
HOT_WALLET_MAX_TRANSACTION=100000